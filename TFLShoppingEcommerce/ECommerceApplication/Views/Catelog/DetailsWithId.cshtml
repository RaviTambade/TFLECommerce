@{
    ViewData["Title"] = "Product details Page";
}
@* <link rel="stylesheet" href="~/css/CatelogStyle.css" /> *@

<style>
    body {
        font-family: 'Inter', system-ui, sans-serif;
        background: #f8fafc;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .details-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #64748b;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 24px;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #334155;
    }

    .product-container {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
    }

    .product-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        min-height: 600px;
    }

    .product-gallery {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .gallery-badge {
        position: absolute;
        top: 24px;
        left: 24px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .product-image {
        max-width: 100%;
        max-height: 500px;
        object-fit: contain;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    }

    .product-info {
        padding: 60px;
        display: flex;
        flex-direction: column;
    }

    .product-id {
        font-size: 13px;
        color: #64748b;
        font-weight: 600;
        margin-bottom: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .product-title {
        font-size: 36px;
        font-weight: 900;
        color: #0f172a;
        margin: 0 0 20px 0;
        line-height: 1.2;
    }

    .product-description {
        font-size: 16px;
        color: #475569;
        line-height: 1.7;
        margin-bottom: 32px;
    }

    .product-specs {
        display: grid;
        gap: 20px;
        margin-bottom: 32px;
        padding: 24px;
        background: #f8fafc;
        border-radius: 16px;
        border-left: 4px solid #10b981;
    }

    .spec-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .spec-label {
        font-size: 14px;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .spec-value {
        font-size: 16px;
        color: #0f172a;
        font-weight: 700;
    }

    .price-section {
        background: linear-gradient(135deg, #ecfdf5, #d1fae5);
        padding: 24px;
        border-radius: 16px;
        margin-bottom: 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .price-label {
        font-size: 14px;
        color: #065f46;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .price-amount {
        font-size: 42px;
        font-weight: 900;
        color: #064e3b;
    }

    .stock-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #d1fae5;
        color: #065f46;
        padding: 10px 20px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 700;
        margin-bottom: 32px;
    }

    .stock-dot {
        width: 8px;
        height: 8px;
        background: #10b981;
        border-radius: 50%;
        animation: pulse-dot 2s ease-in-out infinite;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        margin-top: auto;
    }

    .btn {
        flex: 1;
        padding: 18px 24px;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        text-decoration: none;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(16, 185, 129, 0.5);
    }

    .btn-secondary {
        background: white;
        color: #10b981;
        border: 2px solid #10b981;
    }

    .btn-secondary:hover {
        background: #f8fafc;
    }

    .features-list {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        margin-bottom: 32px;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background: #f8fafc;
        border-radius: 10px;
    }

    .feature-icon {
        font-size: 20px;
    }

    .feature-text {
        font-size: 13px;
        color: #475569;
        font-weight: 600;
    }

    @@keyframes pulse-dot {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.5;
            transform: scale(1.2);
        }
    }

    @@media (max-width: 968px) {
        .product-layout {
            grid-template-columns: 1fr;
        }

        .product-gallery {
            padding: 40px;
            min-height: 400px;
        }

        .product-info {
            padding: 40px;
        }

        .product-title {
            font-size: 28px;
        }

        .price-amount {
            font-size: 32px;
        }

        .features-list {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 640px) {
        .details-wrapper {
            padding: 20px;
        }

        .product-gallery {
            padding: 24px;
        }

        .product-info {
            padding: 24px;
        }

        .product-title {
            font-size: 24px;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<div class="details-wrapper">
    <a href="/Catelog/index" class="back-link">
        ‚Üê Back to Products
    </a>

    @{
        Product product = (Product)ViewData["productById"];
        
        <div class="product-container">
            <div class="product-layout">
                <div class="product-gallery">
                    <span class="gallery-badge">In Stock</span>
                    <img src="@product.ProductImage" alt="@product.ProductTitle" class="product-image" />
                </div>

                <div class="product-info">
                    <div class="product-id">Product ID: #@product.ProductId</div>
                    <h1 class="product-title">@product.ProductTitle</h1>
                    <p class="product-description">@product.Description</p>

                    <div class="price-section">
                        <span class="price-label">Price</span>
                        <span class="price-amount">‚Çπ@product.UnitPrice.ToString("N2")</span>
                    </div>

                    <div class="stock-badge">
                        <span class="stock-dot"></span>
                        @product.Quantity units available
                    </div>

                    <div class="features-list">
                        <div class="feature-item">
                            <span class="feature-icon">‚úì</span>
                            <span class="feature-text">Fast Delivery</span>
                        </div>
                        <div class="feature-item">
                            <span class="feature-icon">‚úì</span>
                            <span class="feature-text">Secure Payment</span>
                        </div>
                        <div class="feature-item">
                            <span class="feature-icon">‚úì</span>
                            <span class="feature-text">Easy Returns</span>
                        </div>
                        <div class="feature-item">
                            <span class="feature-icon">‚úì</span>
                            <span class="feature-text">Quality Assured</span>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a href="/ShoppingCart/Insert/@product.ProductId" class="btn btn-primary">
                            üõí Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>