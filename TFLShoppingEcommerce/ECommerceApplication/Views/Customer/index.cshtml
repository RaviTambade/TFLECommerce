@{
    ViewData["Title"] = "Customers";
    List<Customer> customers = (List<Customer>)ViewData["allCustomers"];
}

<link rel="stylesheet" href="~/css/CatelogStyle.css" />
<link rel="stylesheet" href="~/css/NavBarStyle.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 0;
    }

    .main {
        padding: 30px 50px;
    }

    .page-title {
        font-size: 36px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
        text-align: center;
    }

    .table-container {
        width: 100%;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
    }

    thead {
        background-color: #000003;
        color: white;
    }

    thead:hover {
        background-color: #ffffff;
        color: black;
    }

    th,
    td {
        padding: 16px 20px;
        text-align: left;
        font-size: 15px;
    }

    th {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #eef2ff;
    }

    table tr:last-child td {
        text-align: left;
    }
</style>

<div class="main">
    <h1 class="page-title">All Customers</h1>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (Customer cust in customers)
                {
                    <tr>
                        <td>@cust.CustomerId</td>
                        <td>@cust.UserName</td>
                        <td>@cust.Email</td>
                        <td>@cust.Address</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
