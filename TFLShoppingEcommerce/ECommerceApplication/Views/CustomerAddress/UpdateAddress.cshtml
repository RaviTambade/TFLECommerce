@model ECommerceApplication.Models.ShippingAddress

<link rel="stylesheet" href="~/css/CatelogStyle.css" />

<div class="data">
    <h1>UPDATE EXISTING ADDRESS</h1>
    <form asp-action="UpdateAddress" asp-controller="CustomerAddress" method="post">
        <table>
            <input type="hidden" asp-for="AddressId" />
            <tr>
                <td>Address:</td>
                <td><input type="text" name="address" value="@Model.Address" required /></td>
            </tr>
            <tr>
                <td>City:</td>
                <td><input type="text" name="city" value="@Model.City" required /></td>
            </tr>
        
            <tr>
                <td>State:</td>
                <td><input type="text" name="state" value="@Model.State" required /></td>
            </tr>
            <tr>
                <td>Zip Code:</td>
                <td><input type="text" name="zipCode" value="@Model.ZipCode" required /></td>
            </tr>
            <tr>
                <td>Country:</td>
                <td><input type="text" name="country" value="@Model.Country" required /></td>
            </tr>
           
            <tr>
                <td></td>
                <td><input type="submit" class="submitButton" value="Update" /></td>
            </tr>
        </table>
    </form>
</div>