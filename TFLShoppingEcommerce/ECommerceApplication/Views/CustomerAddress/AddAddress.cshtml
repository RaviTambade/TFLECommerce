@model ECommerceApplication.Models.ShippingAddress


<style>
    body {
        font-family: 'Inter', system-ui, sans-serif;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .form-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .form-container {
        background: white;
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 700px;
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #10b981, #059669);
        padding: 40px;
        text-align: center;
        color: white;
    }

    .form-icon {
        font-size: 48px;
        margin-bottom: 16px;
    }

    .form-title {
        font-size: 32px;
        font-weight: 800;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-subtitle {
        font-size: 14px;
        margin-top: 8px;
        opacity: 0.9;
    }

    .form-body {
        padding: 40px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group.full-width {
        grid-column: 1 / -1;
    }

    .form-label {
        display: block;
        font-size: 13px;
        font-weight: 700;
        color: #334155;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .form-input {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 500;
        color: #1e293b;
        transition: all 0.3s ease;
        background: #f8fafc;
        box-sizing: border-box;
    }

    .form-input:focus {
        outline: none;
        border-color: #10b981;
        background: white;
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
        pointer-events: none;
    }

    .input-wrapper .form-input {
        padding-left: 48px;
    }

    .form-actions {
        margin-top: 32px;
        display: flex;
        gap: 12px;
    }

    .btn {
        flex: 1;
        padding: 16px;
        border: none;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        text-decoration: none;
        text-align: center;
        display: inline-block;
    }

    .btn-primary {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(16, 185, 129, 0.5);
    }

    .btn-secondary {
        background: white;
        color: #10b981;
        border: 2px solid #10b981;
    }

    .btn-secondary:hover {
        background: #f8fafc;
    }

    .info-box {
        background: #ecfdf5;
        border-left: 4px solid #10b981;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        display: flex;
        align-items: start;
        gap: 12px;
    }

    .info-icon {
        font-size: 24px;
        flex-shrink: 0;
    }

    .info-text {
        font-size: 14px;
        color: #065f46;
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .form-container {
            border-radius: 0;
            min-height: 100vh;
        }

        .form-header {
            padding: 32px 24px;
        }

        .form-title {
            font-size: 24px;
        }

        .form-body {
            padding: 24px;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .form-actions {
            flex-direction: column;
        }
    }
</style>

<div class="form-wrapper">
    <div class="form-container">
        <div class="form-header">
            <div class="form-icon">üìç</div>
            <h1 class="form-title">Add New Address</h1>
            <p class="form-subtitle">Add a new shipping address to your account</p>
        </div>

        <div class="form-body">
            <div class="info-box">
                <span class="info-icon">üí°</span>
                <p class="info-text">
                    Please ensure all address details are accurate for successful delivery.
                </p>
            </div>

            <form asp-action="AddAddress" asp-controller="CustomerAddress" method="post">
                <input type="hidden" asp-for="AddressId" />

                <div class="form-group full-width">
                    <label class="form-label">Street Address</label>
                    <div class="input-wrapper">
                        <span class="input-icon">üè†</span>
                        <input type="text" name="address" class="form-input" required placeholder="Enter your street address" />
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">City</label>
                        <div class="input-wrapper">
                            <span class="input-icon">üèôÔ∏è</span>
                            <input type="text" name="city" class="form-input" required placeholder="City" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">State</label>
                        <div class="input-wrapper">
                            <span class="input-icon">üó∫Ô∏è</span>
                            <input type="text" name="state" class="form-input" required placeholder="State" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Zip Code</label>
                        <div class="input-wrapper">
                            <span class="input-icon">üìÆ</span>
                            <input type="text" name="zipCode" class="form-input" required placeholder="Zip Code" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Country</label>
                        <div class="input-wrapper">
                            <span class="input-icon">üåç</span>
                            <input type="text" name="country" class="form-input" required placeholder="Country" />
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Address</button>
                </div>
            </form>
        </div>
    </div>
</div>