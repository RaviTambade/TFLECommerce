@{
    ViewData["Title"] = "Customers";
    List<ShippingAddress> customerAddresses = (List<ShippingAddress>)ViewData["allcustomeraddress"];
}

<link rel="stylesheet" href="~/css/CatelogStyle.css" />
<link rel="stylesheet" href="~/css/NavBarStyle.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 0;
    }

    .main {
        padding: 30px 50px;
    }

    .page-title {
        font-size: 36px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
        text-align: center;
    }

    .table-container {
        width: 100%;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
    }

    thead {
        background-color: #000003;
        color: white;
    }

    thead:hover {
        background-color: #ffffff;
        color: black;
    }

    th,
    td {
        padding: 16px 20px;
        text-align: left;
        font-size: 15px;
    }

    th {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #eef2ff;
    }

    table tr:last-child td {
        text-align: left;
    }

    .button-container {
        display: flex;
        justify-content: flex-end;
        /* pushes button to right */
        margin-bottom: 15px;
        /* spacing below */
    }

    .button-container button {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        background-color: rgb(5, 152, 10);
        color: white;
        font-size: 14px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .button-container button:hover {
        background-color: #333;
    }
</style>

<div class="main">
    <h1 class="page-title">All Customers</h1>
    <div class="button-container">
        <a href=""><button>Add New Address</button></a>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip code</th>
                    <th>Country</th>
                    <th>Action</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (ShippingAddress custAdd in customerAddresses)
                {
                    <tr>
                        <td>@custAdd.Address</td>
                        <td>@custAdd.City</td>
                        <td>@custAdd.State</td>
                        <td>@custAdd.ZipCode</td>
                        <td>@custAdd.Country</td>
                        <td>
                            <a href="/CustomerAddress/UpdateAddress/@custAdd.AddressId">
                                <button class="update-btn">Update</button>
                            </a>

                            <a href="/CustomerAddress/DeleteAddress/@custAdd.AddressId">
                                <button class="update-btn">Delete</button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
