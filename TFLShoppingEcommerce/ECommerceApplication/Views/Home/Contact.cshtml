@{
    ViewData["Title"] = "Contact Us";
}
<link rel="stylesheet" href="~/css/info-pages.css" />
<script src="~/js/contact.js" asp-append-version="true"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="contact-hero">
    <h1>Contact ShopSmart</h1>
    <p>We’d love to hear from you — whether it's feedback, support, or partnership!</p>
</div>

<div class="container contact-section my-5">
    <div class="row g-5 align-items-start">
        <!-- Contact Form -->
        <div class="col-lg-6">
            <div class="contact-card bg-white p-4 shadow-lg rounded-4 animate-fade">
                <h3 class="mb-4 text-primary fw-bold">Send us a message</h3>
                <form>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" placeholder="Your name" required>
                        <label for="name">Your Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" placeholder="Your email" required>
                        <label for="email">Your Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" placeholder="Your message" id="message" style="height: 120px;" required></textarea>
                        <label for="message">Message</label>
                    </div>
                    <button class="btn btn-gradient w-100 py-2 fs-6 fw-semibold" type="submit">Send Message</button>
                </form>
            </div>
        </div>

        <!-- Info and Map -->
        <div class="col-lg-6 animate-slide-up">
            <div class="info-box p-4 rounded-4 shadow-sm bg-light h-100">
                <h4 class="text-dark mb-3 fw-bold">Reach Us At</h4>
                <p><i class="fas fa-map-marker-alt text-primary me-2"></i> Pune, Maharashtra, India</p>
                <p><i class="fas fa-envelope text-primary me-2"></i> support@shopsmart.com</p>
                <p><i class="fas fa-phone text-primary me-2"></i> +91 98765 43210</p>
                <div class="mt-4">
                    <iframe class="w-100 rounded-3 border" height="250"
                            src="https://maps.google.com/maps?q=pune&t=&z=13&ie=UTF8&iwloc=&output=embed"
                            allowfullscreen loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-light pt-5 pb-4 mt-5">
    <div class="container text-center text-md-left">
        <div class="row">

            <!-- About -->
            <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold text-warning">ShopSmart</h5>
                <p style="color:#fff;">Your one-stop destination for the latest in fashion, electronics, home essentials and more.</p>
            </div>

            <!-- Links -->
            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold">Quick Links</h5>
                <p style="color:#fff;"><a href="/catelog/index" class="text-light text-decoration-none">Products</a></p>
                <p style="color:#fff;"><a href="/Home/about" class="text-light text-decoration-none">About Us</a></p>
                <p style="color:#fff;"><a href="/home/contact" class="text-light text-decoration-none">Contact</a></p>
                <p style="color:#fff;"><a href="/home/privacy" class="text-light text-decoration-none">Privacy Policy</a></p>
            </div>

            <!-- Contact -->
            <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold">Contact</h5>
                <p style="color:#fff;"><i class="fas fa-home me-2"></i> Pune, India</p>
                <p style="color:#fff;"><i class="fas fa-envelope me-2"></i> support@shopsmart.com</p>
                <p style="color:#fff;"><i class="fas fa-phone me-2"></i> +91 98765 43210</p>
            </div>

            <!-- Social -->
            <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mt-3 text-center">
                <h5 class="text-uppercase mb-4 font-weight-bold">Follow Us</h5>
                <a href="#" class="text-light me-3"><i class="fab fa-facebook fa-lg"></i></a>
                <a href="#" class="text-light me-3"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#" class="text-light me-3"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="#" class="text-light"><i class="fab fa-linkedin fa-lg"></i></a>
            </div>
        </div>

        <hr class="mb-4" />

        <div class="row align-items-center">
            <div class="col-12 text-center">
                <p style="color:#fff;" class="mb-0">&copy; 2025 ShopSmart. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</footer>

