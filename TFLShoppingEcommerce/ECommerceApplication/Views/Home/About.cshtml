@{
    ViewData["Title"] = "About Us";
}
<link rel="stylesheet" href="~/css/about.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<script src="~/js/about.js" asp-append-version="true"></script>

<!-- Hero Section with Parallax -->
<div class="parallax-hero">
    <div class="hero-content">
        <h1>About ShopSmart</h1>
        <p>Smart Shopping with Style, Speed & Satisfaction</p>
    </div>
</div>

<!-- Services Section -->
<section class="services-section container py-5">
    <h2 class="text-center mb-5">Services We Provide</h2>
    <div class="row justify-content-center">
        <!-- Fashion -->
        <div class="col-md-4 mb-4">
            <div  class="flip-card fashion-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <h5>Fashion Collection</h5>
                        <p>Stylish Apparel & Accessories</p>
                    </div>
                    <div class="flip-card-back">
                        <h3>Fashion</h3>
                        <hr />
                        <p>Explore our handpicked clothing, shoes, bags, and accessories for all age groups. We blend affordability with style to bring you what’s trending now.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Electronics -->
        <div class="col-md-4 mb-4">
            <div class="flip-card electronics-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <h5>Smart Electronics</h5>
                        <p>Tech for Every Lifestyle</p>
                    </div>
                    <div class="flip-card-back">
                        <h3>Electronics</h3>
                        <hr />
                        <p>Shop gadgets, smart devices, and accessories with great discounts. Our electronics come with warranties and reliable delivery across India.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Home & Furniture -->
        <div class="col-md-4 mb-4">
            <div class="flip-card home-card"> 
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <h5>Home & Living</h5>
                        <p>Comfort & Style Delivered</p>
                    </div>
                    <div class="flip-card-back">
                        <h3>Furniture & Décor</h3>
                        <hr />
                        <p>Modern furniture, home decor, lighting, and essentials that enhance the look and comfort of your home — delivered with care and class.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Timeline Section -->
<section class="timeline-section">
    <h2 class="text-center mb-5">Our Journey</h2>
    <div class="timeline">
        <div class="timeline-item left">
            <div class="dot"></div>
            <div class="content">
                <h5>2021</h5>
                <p>Founded with a mission to simplify online shopping</p>
            </div>
        </div>
        <div class="timeline-item right">
            <div class="dot"></div>
            <div class="content">
                <h5>2022</h5>
                <p>Launched electronics, expanded to 5 cities</p>
            </div>
        </div>
        <div class="timeline-item left">
            <div class="dot"></div>
            <div class="content">
                <h5>2023</h5>
                <p>Reached 100K customers with 99% satisfaction</p>
            </div>
        </div>
        <div class="timeline-item right">
            <div class="dot"></div>
            <div class="content">
                <h5>2024</h5>
                <p>AI-powered product recommendation engine live</p>
            </div>
        </div>
    </div>
</section>



